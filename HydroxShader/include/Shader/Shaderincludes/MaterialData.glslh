struct MaterialData
{
	float diffuseRho;
	float specularRho;//metall materials have their own color as specular reflection
	float ambientStrength;
	float roughness;
	vec4 color;
};

layout(std140, binding = 1) uniform materialBuffer
{
	MaterialData material[512];
};

layout(std430, binding = 1) buffer materialIndexBuffer
{
	uint materialIndex[];
};
